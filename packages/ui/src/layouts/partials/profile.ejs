<div class="container-fluid">
    <div class="card">
        <div class="user-profile-img">
            <img src="/images/pro-bg.png" alt="user" class="profile-img profile-foreground-img rounded-top" />
            <div class="overlay-content rounded-top">
                <div>
                    <div class="user-nav p-3">
                        <div class="d-flex justify-content-end">
                            <div class="dropdown">
                                <a class="text-muted font-size-16" href="/signup/<%= user_info.id %>" role="button">
                                    <i class="ti ti-pencil text-white font-size-20"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="p-4 pt-0">
            <div class="mt-n5 position-relative text-center pb-3">
                <form action="/profile/<%= user_info.id %>/updateAvatar" method="POST" enctype="multipart/form-data" id="form-upload">
                    <label style="cursor: pointer">
                        <% if(user_info.imagePath) {%>
                        <img src="/uploads/users/<%= user_info.imagePath %>" alt="" class="avatar-xxl rounded-circle img-h5umbnail" />
                        <% } else {%>
                        <div class="position-relative">
                            <i class="icon-custom bx bxs-user-circle"></i>
                            <i class="mdi mdi-camera position-absolute font-size-20 end-0 bottom-0"></i>
                        </div>
                        <% } %>
                        <input type="file" style="display: none" accept="image/*" id="image-avatar" name="imagePath" />
                        <input hidden value="<% user_info?.userName %>" id="userName" name="userName" />
                    </label>
                </form>
                <div class="mt-3">
                    <h5 class="mb-2"><%= user_info.firstName %> <%= user_info.lastName %></h5>
                </div>
                <div class="mt-3">
                    <h5 class="mb-1">
                        <span class="alert <%= user_info.roleId === 1 ? 'alert-success' : user_info.roleId === 2 ? 'alert-secondary' : user_info.roleId === 3 ? 'alert-danger' : 'alert-warning' %> p-2"><%= user_info.role.roleName %></span>
                    </h5>
                </div>
            </div>
        </div>
        <div class="tab-pane active h-100" id="overview" role="tabpanel">
            <div class="row h-100">
                <div class="card card-profile">
                    <div class="card-body pt-1">
                        <div class="table-responsive px-5 py-2">
                            <div class="text-row">
                                <span class="font-size-14">ログインID</span>
                                <div class="user_information_group">
                                    <i class="mdi mdi-badge-account-horizontal-outline font-size-20 me-1"></i>
                                    <span class="font-size-14"><%= user_info.email %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
